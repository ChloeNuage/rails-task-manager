<h2 class="fs-2 my-4"><%= @task.title %></h2>
<p class="alert alert-primary fs-5">
  <% if @task.completed? %>
    <i class="fa-regular fa-square-check me-2"></i>
  <% else %>
    <i class="fa-regular fa-square me-2"></i>
  <% end %>
  <%= @task.details %>
</p>

<button type="button" class="btn btn-dark my-4"> <%= link_to "Back", tasks_path, class: "text-decoration-none text-white" %> </button>
<button type="button" class="btn btn-primary my-4" > <%= link_to "Edit", edit_task_path(@task), class: "text-decoration-none text-white" %> </button>
<button type="button" class="btn btn-danger my-4">
  <%= link_to "Delete",
  task_path(@task),
  class: "text-decoration-none text-white",
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</button>
